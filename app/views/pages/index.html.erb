<% if current_user %>
  <div class="card p-2 my-4">
    <h1>Welcome, <%= current_user.email %> to the app</h1>
    <%= link_to "Posts", posts_path, class:'me-2' %>
    <%= link_to "Add New Post", new_post_path, class:'me-2' %>
    <div class="d-flex justify-content-between">
      <%= link_to "My Account", edit_user_registration_path  %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class:'btn btn-primary' %>
    </div>
  </div>

  <%else %>

  <div class="card p-2 my-4 text-center">
    <div class="container my-3">
      <h1>Sign up to become a member of the blog</h1>
      <%= link_to "Sign up", new_user_registration_path, class:'btn btn-primary' %>
      <%= link_to "Go to Blog", posts_path, class:'btn btn-outline-primary' %>
    </div>
  </div>
<%end %>